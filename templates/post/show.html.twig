{% extends 'base.html.twig' %} {% block title %}Post{% endblock %} {% block body %}
<h1>Post</h1>

<table class="table">
    <tbody>
        <tr>
            <th>Title</th>
            <td>{{ post.title }}</td>
        </tr>
        <tr>
            <th>Created</th>
            <td>{{ post.created ? post.created|date('Y-m-d H:i:s') : '' }}</td>
        </tr>
        <tr>
            <th>Image</th>
            <td>
                <img src="{{ asset('uploads/posts/' ~ post.image) }}" height="200px" />
            </td>
        </tr>
        <tr>
            <th>Text</th>
            <td>{{ post.text }}</td>
        </tr>
    </tbody>
</table>

